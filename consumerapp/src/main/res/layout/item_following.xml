<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0F1D23"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp">


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorToolbar"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/guideline2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar_following"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2" />

    <TextView
        android:id="@+id/tv_username_following"
        style="@style/MainText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/username"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_following"
        app:layout_constraintTop_toBottomOf="@id/guideline3" />
    <TextView
        android:id="@+id/tv_name_following"
        style="@style/MainText"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/name"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar_following"
        app:layout_constraintTop_toBottomOf="@id/tv_username_following" />





    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>